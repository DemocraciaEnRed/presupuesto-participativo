.intro-mapa
  padding: 50px 20px
  text-align: center
    

.fondo-titulo
  display: inline-flex;
  justify-content: center
  margin: 10px auto 20px
  padding: 10px 10%;
  align-items: center
  background-color: $primary
  color: white
  text-align: center
  h2
    font-family: 'AlfabetLight', sans-serif
    font-size: 30px
    font-weight: 300
    text-transform: uppercase

.mapa
  width: 640px
  height: 480px


.mapa-vectores
  display: flex;
  justify-content: center
  @media screen and (min-width: 768px)
    display: flex
  span
    color:white


dialog
  border: solid gray 2px
  border-radius: 10px
  position: fixed
  display: block
  top: 15%
  max-width: 90%
  min-width: 40% 
  max-height: 60%
  background: #E9E9E9
  box-shadow: 2px 2px 5px rgba(0,0,0,.4)
  overflow: auto
  z-index: 9999999  

  img
    max-width 70%
  h3
    text-align: left
    float: left
    text-transform: uppercase
    font-family: 'AlfabetLight', sans-serif
    font-size: 17px
    display: block;
    width: 100%
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    -o-text-overflow: ellipsis;   /* required for Opera */
    -ms-text-overflow: ellipsis;  /* required for IE8, allegedly */  
    padding: 1rem 1rem;
    margin: -1rem -1rem -1rem -1rem;
  
  li
    text-align: left
    font-size: 15px  
  
  span
    text-transform: uppercase
    font-family: 'AlfabetLight', sans-serif
    font-size: 25px  
    float: right;
    font-weight: bold;
  span:hover,
  span:focus
    color: black;
    text-decoration: none;
    cursor: pointer;


.region
  cursor: pointer;