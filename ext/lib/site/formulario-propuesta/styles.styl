@import '../../../../node_modules/tags-input/tags-input.css'
@import '../../../../lib/admin/admin-topics-form/tag-autocomplete/styles'


.form-propuesta
  display: flex
  flex-direction: column
  align-items: center
  font-family: 'AlfabetLight', sans-serif
  @media (max-width: 400px)
    margin-top: 140px
  .propuesta-header
    color: white
    display: flex
    align-items: center
    flex-direction: column
    justify-content: flex-end
    min-height: 250px
    width: 100%
    padding: 0 20px
    text-align: center
    background-repeat: no-repeat
    background-position: center;
    background-color: $secondary-light
    background-size: 100%
    h1
      font-size: 32px
      margin:0;
      font-family: 'AlfabetLight', sans-serif
      background-color: $primary;
      padding: 10px 20px;
      @media screen and (min-width: 764px)
        font-size: 32px
  .subtitle
    font-size: 16px
    font-family: 'AlfabetBold', sans-serif
    margin:0;
    padding: 4px 30px;
    color: #fff
    // margin-top:6px;
    // background-color: rgba(23,145,190,0.6)
    background-color: $terciary
    @media screen and (min-width: 764px)
      font-size: 20px

  .wrapper
    max-width:900px
    width: 100%
    padding: 20px
    position: relative
    .more-info
      text-align: center;
      font-size: 20px;
      margin-top: 10px;
    .bar-section
      padding: 1rem 1rem;
      text-align: center
      &.acerca-requisitos
        margin-top: 0
        background: $terciary;
        .section-title
          font-size: 20px
          font-family: 'AlfabetLight', sans-serif
          color: white
          text-align: center;        
      &.acerca-propuesta
        background: $primary;
        margin: 2rem 20%    
        margin-bottom: 0
      p
        margin: 0
        color: #fff
        text-align: center;
        line-height: normal;
      .section-title
        font-size: 30px
        font-weight: bold
        font-family: 'AlfabetLight', sans-serif
        text-align: center;
      .section-subtitle
        color: #484747
        font-size: 16px
        text-align: center
        font-family: 'AlfabetLight', sans-serif
      .section-intro
        background-color: #8c1e80
        font-size: 16px
        color: white
        padding: 4px 20px
        display: inline-block
        margin-bottom: 25px
    .required
      color: #000
    label
      // color: rgba(0, 0, 0, 0.55)
      margin: 10px 0 15px;
      font-size: 20px;
      font-weight: bold;

    input
      width:100%
    .tags-input
      border-radius: 5px
      border: 1px solid #CACACA
      padding: 3px 10px
      width: 100%
    
    .btn-requirements-accepted
      color: $secondary
      font-family: 'AlfabetLight', sans-serif
      font-style: normal;
      font-size: 25px;
      line-height: 30px;
      text-align: center;
      padding: 1rem;
      border: 3px solid $secondary;
      filter: drop-shadow(0px 4px 4px rgba(255, 255, 255, 0.25));
      border-radius: 5px;
      background: #FFFFFF;      

    .bullet-requisitos
      margin-top: 40px
    li
      font-family: 'AlfabetLight', sans-serif
      font-style: normal;
      font-weight: 400;
      color: #000000;
      text-align: justify
      margin-bottom: 20px
    .bold
      font-weight: bold;

    input, select, textarea
      border-radius: 0px
      border: 1px solid #CACACA
      border-bottom: 2px solid #CACACA
      font-size: 1.2rem
      color: #000
      &:focus
        box-shadow: none;
        // border-color: #1791be
        border: 1px solid #1791be
        border-bottom: 2px solid #1791be
    .submit-div
      text-align: center
      .submit-btn
        color: $primary
        font-weight: 800
        border: 2px solid $primary
        background-color: #FFF;
        border-radius: 5px
        padding: 12px 60px
        font-weight: 800;
        font-size: 25px
        cursor: pointer
        &:hover
          background-color: $primary;
          color: #FFF
    .form-section-label
      color: #9e41b9
      font-size: 18px
      font-weight: bold
      @media screen and (min-width: 1360px)
        position: relative
        left: -240px
        margin-top: 10px
        top: 30px

  select.special-height
    height: 3rem !important;

  ul.tags
    list-style: none;
    margin: 20px 0;
    overflow: hidden;
    padding: 0;
  ul.tags li
    float: left;

  .tag
    background: #eee;
    border-radius: 8px;
    color: #000;
    display: inline-block;
    padding: 4px;
    //height: 25px;
    line-height: 25px;
    position: relative;
    margin: 0 10px 10px 0;
    text-decoration: none;
    /* &::before
      background: #fff;
      border-radius: 10px;
      box-shadow: inset 0 1px rgba(0, 0, 0, 0.25);
      content: '';
      height: 6px;
      left: 10px;
      position: absolute;
      width: 6px;
      top: 10px;
    &::after
      background: #fff;
      border-bottom: 13px solid transparent;
      border-left: 10px solid #eee;
      border-top: 13px solid transparent;
      content: '';
      position: absolute;
      right: 0;
      top: 0; */
    &:hover
      background: $secondary-light;
      color: white !important;
      cursor: pointer;
      padding: 4px;
    /* &:hover::after
      border-left-color: #8c1e80; */
    &.active
      background: $secondary-light;
      padding: 4px;
      color: white;
      &:after
        content: 'x'
        padding-left: 12px
   /*  &.active::after
      border-left-color: #8c1e80; */

  .add-color
    color: $primary;
  .help-text
    display: block
    font-size: 16px
    color: #000
    margin: 0 0 .3em
    &.requerido
      font-size: .7em
      font-style: italic
      color: #828282

  .span-alert
    color: #9e41b9
    font-size:.8em
    @media screen and (min-width: 1360px)
        position: relative
        // left: -240px
        margin-top: 10px
        top: 30px
  .cronograma-alert
    padding-top:10px

  .cronograma
    tex-align:right
    margin-top: 40px

  .error-box
    border: 2px solid red;
    border-radius: 10px
    padding: 15px;
    margin-bottom: 10px
    ul
      margin-bottom: 0
    li.error-li
      color: red;

  .idea-no-factible
    text-align: center;
    margin-top: 20px
    margin-bottom: 20px  
    align-items: center;
    padding: 20px 20px;
    height: 130px;
    border: 5px solid #FB5734;
    border-radius: 25px;    
    img
      margin-top: -2.8rem
    p
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'AlfabetLight', sans-serif
      font-style: normal;
      font-weight: 300;
      font-size: 18px;
      line-height: 30px;
      text-align: center;
      color: #000000;

  .idea-factible
    text-align: center;
    margin-top: 20px
    margin-bottom: 20px  
    align-items: center;
    padding: 20px 20px;
    height: 130px;
    border: 5px solid #23CA2F;
    border-radius: 25px;    
    img
      margin-top: -2.8rem
    p
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: 'AlfabetLight', sans-serif
      font-style: normal;
      font-weight: 300;
      font-size: 18px;
      line-height: 30px;
      text-align: center;
      color: #000000;    

  .aceptar-tyc
    font-family: 'AlfabetLight', sans-serif
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 30px;
    text-align: center;

  .parte-ubicacion
    font-family: 'AlfabetLight', sans-serif
    font-style: normal;
    font-weight: 400;
    font-size: 30px;
  
  .buscar-zona
    text-decoration-line: underline;
    color: #00758F;
    cursor: pointer;

  .disclaimer-orgas
    padding: 20px;
    box-sizing: border-box;
    width: 100%;
    border: 3px solid $secondary-light;  
  
