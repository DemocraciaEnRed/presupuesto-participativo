.ideas-topic-card
  width: 100%
  margin: 0 0 1.5em
  height: auto
  min-height: unset
  border-radius: 5px;
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.25);
  border: solid 1px #bab8b8;
  &:hover
    box-shadow: 0 2px 5px #555
  .topic-card-title
    color black
    margin-bottom: 5px
    font-size: 18px
    padding-right: 100px;
    &>a
      color: #444
    &.mt-5
      margin-top: 5px

  .idea-factible
    border: 3px solid $primary;
    background-image: unquote("url('ext/lib/site/home-catalogo/voto.svg')")
    background-repeat: no-repeat
    background-position: right;
    background-size: 20%

  .idea-ganador
    border: 3px solid #C481B6;
    background-image: unquote("url('ext/lib/site/home-catalogo/premio.svg')")
    background-repeat: no-repeat
    background-position: right;    
    background-size: 12%

  .idea-integrado
    background-image: unquote("url('ext/lib/site/home-catalogo/cadena.svg')")
    background-repeat: no-repeat
    background-position: right;    
    background-size: 15%

  .idea-no-factible
    background-image: unquote("url('ext/lib/site/home-catalogo/desestimada.svg')")
    background-repeat: no-repeat
    background-position: right;    
    background-size: 15%


  .topic-number
    font-size 22px
    padding-right: 10px;
    font-weight: bold;

  .topic-card-info
    padding-bottom: 0
    height: auto

  .topic-card-attrs
    span.badge
      background-color: $primary
      font-size: 14px
      border-radius: 35px
      color: #fff
      padding:6px 15px 6px 15px
      font-weight: normal;
      text-decoration: none !important
      margin-right:9px
      margin-bottom: 10px

  .topic-card-description
    margin: 13px 0 0 0
    text-transform: none
    a
      font-size: 15px
      white-space: normal
  .topic-card-footer
    padding: 20px 35px
    @media screen and (min-width: 769px)
      display: flex;
      justify-content: space-between;

    .topic-card-presupuesto
      color: $primary
      font-weight: bold

    .topic-card-tags
      margin-bottom: 10px;
      @media screen and (min-width: 769px)
        margin-bottom: 0;
      display: flex;
      align-items: center;
      align-content: baseline;
      flex-wrap: wrap;
      .glyphicon
        margin-right: 10px;
        top: 0px;
      .tag-wrapper
        font-size: 14px
        margin-right: 8px
        margin-bottom: 10px;
        color: #000000;
        border-radius: 8px;
        background-color: #f3f3f3;
        padding: 5px 7px;
        font-weight: 400;
        &:last-child
          margin-right: 0
      .tag-status-pendiente
        background-color: #BEBEBE!important        
      .tag-status-no-factible
        background-color: #FFBFBF!important
      .tag-status-integrado
        background-color: #E0E9B0!important        
      .tag-status-factible
        background-color: $primary!important
        color: #fff
      .tag-status-ganador
        background-color: #C481B6!important
      .tag-status-preparacion
        background-color: #dcdcdc!important
      .tag-status-compra
        background-color: #cbcbcb!important
      .tag-status-ejecucion
        background-color: #a3a3a3!important
      .tag-status-finalizado
        background-color: #666666!important
        color: #FFF !important;
    .buttons-wrapper
      display: flex
      flex-wrap: wrap;
      /*min-width: 300px;*/
    .cause-wrapper
      margin-right: 20px;
    .subscribe-wrapperr
      @media screen and (min-width: 769px)
        margin-bottom: 0;
    .proyectista-wrapper
      width: 100%;
      text-align: right;
      .comment 
        margin-left: 20px!important;
        &:hover
          color: #C481B6        
      .btn
        border: 2px solid #C481B6;
        color: #C481B6
        background-color: #FFF
        &:hover
          background-color: #f2f2f2
          


    .cause-wrapper, .subscribe-wrapperr, .proyectista-wrapper
      float: left;
      margin-bottom: 15px;
      .btn
        margin: 0
        border-radius: 5px;
        font-weight: 600
        font-size: 14px
        color: #C481B6
        
        .participants
          font-weight: 400
          display: inline-block
          margin-left: 20px;
          color: #202020
          span
            color: $primary

        &.not-voted,&.not-subscribed
          &:hover
            color: #C481B6
          .participants
            color: #202020
            .icon-like, .icon-bell
              color: $primary

        &.voted,&.subscribed
          .participants
            color: #C481B6

      &.cant-vote,&.cant-subscribe
        .btn
          $disabled-color = #656768
          background: white
          color: $disabled-color
          border-color: $disabled-color
          .participants
            color: $disabled-color



  .topic-creation
    font-size: 14px
    margin-bottom: 1em
    margin-top: 0.8em
    display: flex
    align-items: center
    color: #595959

    i
      margin-right: .5em

    .date
      flex: 1
      text-align: right

    .avatar
      margin-right: 5px
      width: 25px
      height: 25px
      border-radius: 50%
      background-size: cover
      background-position: center center

    .topic-card-author
      font-weight: bold
      color: #C481B6
      margin-right: 2px

    .topic-card-zona, .topic-card-zona
      //margin-left: 30px;
      color: #0b0b0b;


  .estado
    position: absolute
    right: 0
    width: 130px;
    text-align: center;
    padding: 5px 0;
    font-size: 14px
    font-weight: bold
    &.pendiente
      color: #024057
      background-color: #ffdf8b
    &.idea-proyecto
      color: #356905
      background-color: #a4f5a7
    &.sistematizada
      color: #024057
      background-color: #c2efff
    &.proyecto
      color: white
      background-color: #066d93
    &.no-factible
      color: #8c1e80
      background-color: #ffcbf9