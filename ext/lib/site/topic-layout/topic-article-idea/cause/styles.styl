.topics-cause-propuesta
  margin: 0 30px;
  .btn
    background: #C481B6
    margin: 0 10px 0 0
    width: auto
    border: none
  .likes-total
    font-weight: 400
    color: #000
    display: inline-block
    span
      font-weight: normal
      color: #C481B6
  .overlay-vote
    position: absolute
    background: rgba(255, 255, 255, 0.71)
    width: 100%
    height: 100%
    border-radius: 10px
    top: 2px
    display: flex
    align-content: center
    justify-content: center
    span
      align-self: center
      color: #555