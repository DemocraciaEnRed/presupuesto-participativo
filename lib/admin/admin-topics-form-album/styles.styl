.button-remove-from-album
  color: #fff;
  opacity: 1;
  background: red !important;
  width: 25px;
  height: 25px;
  border-radius: 21px;
  position: absolute;
  right: 5px;
  top: 3px;
  font-size: 25px;
  text-shadow: none;
  z-index: 1;
  &:hover
    opacity: 1;
    color: #fff;
  &:active
    opacity: 1;
    color: #fff;
  &:focus
    opacity: 1;
    color: #fff;

.thumbnail-album-form
  position: relative;

.image-album-form
  // instagram style, responsive, square ratio
  width: 100%;
  height: 0;
  padding-bottom: 100%;
  background-size: cover;
  background-position: center center;
  background-repeat: no-repeat;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
  margin-bottom: 10px;
  border: 1px solid #ddd;


  